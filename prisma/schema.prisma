generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TherapistSnippet {
  id           Int      @id @default(autoincrement())
  name         String
  location     String
  phoneNumbers String[]
  links        String[]

  @@unique([name, location])
}

model Therapist {
  id           Int       @id @default(autoincrement())
  name         String    @unique
  // locations    Location[]
  locations    String[]
  // phoneNumbers Phone[]
  phoneNumbers String[]
  // languages    Language[]
  languages    String[]
  // orientations Orientation[]
  orientations String[]
  // therapies    Therapy[]
  therapist    String[]
  email        String?
  homepage     String?
  dateAdded    DateTime  @default(now())
  lastActive   DateTime?
  isActive     Boolean   @default(false)

  @@index([name])
}

